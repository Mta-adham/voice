# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/restaurant_db

# Example for local development:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/restaurant_booking

# LLM Provider API Keys
# OpenAI API key for GPT models (optional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API key (optional)
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude API key (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ElevenLabs Text-to-Speech API Key
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Email Configuration (SendGrid)
# SendGrid API key for email notifications (optional)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email addresses for notifications
FROM_EMAIL=noreply@restaurant.com
REPLY_TO_EMAIL=info@restaurant.com

# Restaurant Information
RESTAURANT_NAME=The Grand Restaurant
RESTAURANT_PHONE=+1 (555) 123-4567
RESTAURANT_ADDRESS=123 Main Street, City, State 12345
DIRECTIONS_INFO=Street parking available. Valet service offered during dinner hours.
